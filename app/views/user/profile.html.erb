<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="css/profile.css">
    <link href="<%= asset_path('profile.css') %>" rel="stylesheet">
</head>
<body>
<% if current_user.user_type == 0 %>
<%= render partial: "shared/nav" %>
<% elsif current_user.user_type == 1 %>
<%= render partial: "shared/nav_admin" %>
<% else %>
<%= render partial: "shared/nav_super_admin" %>
<% end %>

    <main id="profile">
        <% if flash[:alert].present? %>
            <div class="alert alert-danger errors">
                <% flash[:alert].each do |error| %>
                    <p><%= error %></p>
                <% end %>
            </div>
        <% end %>

        <% if flash[:notice].present? %>
            <div class="alert alert-success errors">
                <p><%= flash[:notice] %></p>
            </div>
        <% end %>

        <p><%= flash[:test] %></p>

        <div class="edit">
            <h2 class="user_info">First name: <%= @user_info.first_name %></h2>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#firstName" data-bs-whatever="@mdo">Edit</button>
            <div class="modal fade" id="firstName" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        <div class="modal-body">
                            <form action='change_first_name' method='post'>
                                <div class="mb-3">
                                    <label for="recipient-name" class="col-form-label">Edit first name:</label>
                                    <input type="text" class="form-control" id="recipient-name" name="user[first_name]">
                                    <div class="modal_btn">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <input type="submit" class="btn btn-primary" value="Save">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="edit">
            <h2 class="user_info">Last name: <%= @user_info.last_name %></h2>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#lastName" data-bs-whatever="@mdo">Edit</button>
            <div class="modal fade" id="lastName" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        <div class="modal-body">
                            <form action='change_last_name' method='post'>
                                <div class="mb-3">
                                    <label for="last_name" class="col-form-label">Edit Last name:</label>
                                    <input type="text" class="form-control" id="last_name" name="user[last_name]">
                                    <div class="modal_btn">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <input type="submit" class="btn btn-primary" value="Save">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="edit">
            <h2 class="user_info">Email: <%= @user_info.email %></h2>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#email" data-bs-whatever="@mdo">Edit</button>
            <div class="modal fade" id="email" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        <div class="modal-body">
                            <form action='change_email' method='post'>
                                <div class="mb-3">
                                    <label for="edit_email" class="col-form-label">Edit email:</label>
                                    <input type="text" class="form-control" id="edit_email" name="user[email]">
                                    <div class="modal_btn">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <input type="submit" class="btn btn-primary" value="Save">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="edit">
            <h2 class="user_info">Password:</h2>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#password" data-bs-whatever="@mdo">Edit</button>
            <div class="modal fade" id="password" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        <div class="modal-body">
                            <form action='change_password' method='post'>
                                <div class="mb-3">
                                    <h2>Change Password</h2>
                                    <label for="old_password" class="col-form-label">Old password:</label>
                                    <input type="password" class="form-control" id="old_password" name="user[password]">
                                    <label for="new_password" class="col-form-label">New password:</label>
                                    <input type="password" class="form-control" id="new_password" name="user[new_password]">
                                    <label for="confirm_password" class="col-form-label">Confirm password:</label>
                                    <input type="password" class="form-control" id="confirm_password" name="user[password_confirmation]">
                                    <div class="modal_btn">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <input type="submit" class="btn btn-primary" value="Save">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
            
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
